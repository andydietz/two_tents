      <%= form.text_field :address -%>
    </div>
    <div class="field">
      <%= form.label "City" -%>
      <%= form.text_field :city -%>
    </div>
    <div class="field">
      <%= form.label "State" -%>
      <%= form.text_field :state -%>
    </div>
    <div class="field">
      <%= form.label "Zip" -%>
      <%= form.text_field :zip -%>
    </div>
  </fieldset>

  <fieldset>
    <legend>Church Info</legend>
